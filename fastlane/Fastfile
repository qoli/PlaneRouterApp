# This file contains the fastlane.tools configuration
# You can find the documentation at https://docs.fastlane.tools
#
# For a list of all available actions, check out
#
#     https://docs.fastlane.tools/actions
#
# For a list of all available plugins, check out
#
#     https://docs.fastlane.tools/plugins/available-plugins
#

# Uncomment the line if you want fastlane to automatically update itself
# update_fastlane

default_platform(:ios)

platform :ios do
  desc "Push a new beta build to TestFlight"
  lane :beta do
    get_certificates           # invokes cert
    get_provisioning_profile   # invokes sigh
  	increment_build_number
    build_app(
    	workspace: "Router.xcworkspace",
    	scheme: "Router",
    	xcargs: "-UseModernBuildSystem=0"
    	)
    upload_to_testflight(
      changelog: "by fastlane upload",
      distribute_external: true,
      groups: "Open Beta"
      )
  end

  desc "add_group_to_tf_build"
  lane :add_group_to_tf_build do
    fastlane_require 'spaceship'
   
    Spaceship::Tunes.login("llqoli@email.com")
    app = Spaceship::Tunes::Application.find("com.qoli.Router")
    build = Spaceship::TestFlight::Build.latest(app_id: app.apple_id, platform: 'ios')
   
    group_name = 'Open Beta'
    group = Spaceship::TestFlight::Group.find(app_id: app.apple_id, group_name: group_name)
    build.add_group!(group)
  end
end
